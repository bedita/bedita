{
    "name": "bedita/api",
    "type": "cakephp-plugin",
    "description": "A plugin to enable REST API in any BEdita application.",
    "keywords": ["cakephp", "cake3", "plugin", "bedita", "api", "rest", "travis", "scrutinizer", "coveralls"],
    "license": "LGPL-3.0-or-later",
    "support": {
        "source": "https://github.com/bedita/bedita",
        "issues": "https://github.com/bedita/bedita/issues"
    },
    "authors": [
        {
            "name": "Chia Lab s.r.l.",
            "email": "dev@chialab.it",
            "homepage": "http://www.chialab.it"
        },
        {
            "name": "ChannelWeb s.r.l.",
            "email": "info@channelweb.it",
            "homepage": "http://www.channelweb.it"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "cakephp/authentication": "^2.9",
        "cakephp/cakephp": "~4.4.1",
        "firebase/php-jwt": "^5.5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "cakephp/cakephp-codesniffer": "~4.5.1"
    },
    "autoload": {
        "psr-4": {
            "BEdita\\API\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEdita\\API\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
