{
    "name": "bedita/core",
    "type": "cakephp-plugin",
    "description": "BEdita core logic and models.",
    "keywords": ["cakephp", "cake3", "plugin", "bedita", "core", "travis", "scrutinizer", "coveralls"],
    "license": "LGPL-3.0-or-later",
    "support": {
        "source": "https://github.com/bedita/bedita",
        "issues": "https://github.com/bedita/bedita/issues"
    },
    "authors": [
        {
            "name": "Chia Lab s.r.l.",
            "email": "dev@chialab.it",
            "homepage": "http://www.chialab.it"
        },
        {
            "name": "ChannelWeb s.r.l.",
            "email": "info@channelweb.it",
            "homepage": "http://www.channelweb.it"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "~3.9.3",
        "cakephp/migrations": "^2.2.0",
        "league/flysystem": "^1.0.53",
        "league/glide": "^1.5",
        "swaggest/json-schema": "~0.12"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.1",
        "fzaninotto/faker": "^1.5",
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "BEdita\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEdita\\Core\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
